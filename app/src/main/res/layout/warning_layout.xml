<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"

        android:background="@color/holo_red_light">

        <ImageView
            android:id="@+id/warning_icon"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:contentDescription="warning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_warning"
            app:tint="#ffee32"
            android:paddingBottom="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_marginTop="10dp"
            android:paddingBottom="5dp"
            android:id="@+id/tv_spending_warning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ptsansnarrowbold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/close_icon"
            app:layout_constraintStart_toEndOf="@id/warning_icon"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:text="spending limit is exceeded"
            tools:ignore="HardcodedText" />

        <ImageView
            android:id="@+id/close_icon"
            android:layout_margin="3dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:padding="2dp"
            android:src="@drawable/ic_close"
            app:tint="@color/bud_green"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:contentDescription="close"
            tools:ignore="HardcodedText" />


    </androidx.constraintlayout.widget.ConstraintLayout>
